<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CtrlCCtrlClick.MainPage">

    <VerticalStackLayout Spacing="10" Padding="20">
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="Nom :" FontSize="18" />
            <Entry Text="{Binding Nom}" />
            <Label Text="Âge :" FontSize="18" />
            <Entry Text="{Binding Age, Mode=TwoWay}" Keyboard="Numeric" />
            <Button Text="Incrémenter l'âge" Command="{Binding IncrementAgeCommand}" />
            <Label Text="{MultiBinding {Binding Nom}, {Binding Age}, StringFormat='Bonjour, {0} ! Vous avez
{1} ans.'}" FontSize="16" />
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
